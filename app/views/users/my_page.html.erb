<div class="container mt-4">

  <!-- プロフィール -->
  <div class="card mb-4">
    <div class="card-body text-center">

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image,
              class: "rounded-circle mb-3",
              size: "120x120" %>
      <% else %>
        <%= image_tag "default_user.png",
              class: "rounded-circle mb-3",
              size: "120x120" %>
      <% end %>

      <h4 class="mb-1"><%= @user.name %></h4>

      <% if @user.introduction.present? %>
        <p class="text-muted small mt-2">
          <%= simple_format(@user.introduction) %>
        </p>
      <% end %>

    </div>
  </div>

  <div class="row">

    <!-- 左：ユーザー情報 -->
    <div class="col-md-4 mb-4">
      <div class="card sticky-top" style="top: 80px;">
        <div class="card-body text-center">

          <p class="text-muted small"><%= @user.email %></p>

          <hr>

          <p class="mb-1">
            投稿数：<strong><%= @recipes.count %></strong>
          </p>

          <%= link_to "プロフィール編集",
                edit_user_path(@user),
                class: "btn btn-outline-primary btn-sm mt-3" %>
        </div>
      </div>
    </div>

    <!-- 右：投稿一覧 -->
    <div class="col-md-8">
      <h4 class="mb-3">投稿一覧</h4>

      <% if @recipes.any? %>
        <div class="row">
          <% @recipes.each do |recipe| %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">

                <% if recipe.image.attached? %>
                  <%= image_tag recipe.image,
                        class: "card-img-top",
                        style: "height:180px; object-fit:cover;" %>
                <% end %>

                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to recipe.title,
                          recipe_path(recipe),
                          class: "text-decoration-none" %>
                  </h5>

                  <p class="card-text text-muted small">
                    <%= truncate(recipe.body, length: 80) %>
                  </p>
                </div>

                <div class="card-footer text-muted small">
                  <%= recipe.created_at.strftime("%Y/%m/%d") %>
                </div>

              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">まだ投稿がありません。</p>
      <% end %>
    </div>

  </div>
</div>