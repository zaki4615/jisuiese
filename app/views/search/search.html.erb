<h1>検索結果</h1>

<p>検索対象：<%= @model %></p>
<p>キーワード：<%= @keyword %></p>

<hr>

<% if @results.any? %>
  <% @results.each do |result| %>

    <% if @model == "user" %>
      <div class="card mb-3 p-3">
        <div class="d-flex justify-content-between align-items-center">

          <div>
            ユーザー名：
            <%= link_to result.name, user_path(result) %>
          </div>

          <% if user_signed_in? %>
            <%= render "users/follow_button", user: result %>
          <% end %>

        </div>
      </div>

    <% elsif @model == "recipe" %>
      <div class="card mb-3 p-3">

        <h5>
          レシピ：
          <%= link_to result.title, recipe_path(result) %>
        </h5>

        <div class="d-flex justify-content-between align-items-center mt-2">
          <small class="text-muted">
            投稿者：
            <%= link_to result.user.name, user_path(result.user) %>
          </small>

          <% if user_signed_in? %>
            <%= render "users/follow_button", user: result.user %>
          <% end %>
        </div>

      </div>
    <% end %>

  <% end %>
<% else %>
  <p>一致するデータはありませんでした。</p>
<% end %>